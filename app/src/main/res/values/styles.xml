<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- TopLayout style -->
    <style name="TopLayoutStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">@dimen/info_layout_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/topBackground</item>
    </style>
    <!-- InfoLayout style -->
    <style name="InfoLayoutStyle">
        <item name="android:layout_weight">2</item>
        <item name="android:paddingTop">@dimen/info_layout_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- ImageView style -->
    <style name="ImageViewStyle">
        <item name="android:paddingTop">@dimen/image_view_padding</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- NameView style -->
    <style name="NameViewStyle">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/nameColor</item>
    </style>
    <!-- TextView style -->
    <style name="TextViewStyle">
        <item name="android:padding">@dimen/text_view_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawableLeft">@drawable/square</item>
    </style>
</resources>
